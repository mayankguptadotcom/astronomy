---
import { SEO } from "astro-seo";
import BasicScripts from "../components/BasicScripts.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
const { minutesRead } = Astro.props.frontmatter;

---

<!DOCTYPE html>
<html lang="en" class="dark bg-white">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
		title="A Very Descriptive Title"
		description="A heavily optimized description full of well-researched keywords." />
		<link href="https://github.com/mayankguptadotcom" rel="me">
		<link
  			rel="stylesheet"
  			href="https://unpkg.com/littlefoot/dist/littlefoot.css"
		/>
	</head>
	<body class="">
    <h1>{minutesRead}</h1>
	<div class="container mx-auto prose prose-xl prose-zinc max-w-screen-md">
    <slot />
</div>
<BasicScripts />

  </body>
</html>

<style is:global>
	ul.contains-task-list {
    list-style: none;
}
input[type="checkbox"] {
	margin: 0;
	@apply bg-red-100 border-red-300 text-red-500 focus:ring-red-200 h-6 w-6 shadow
}
</style>